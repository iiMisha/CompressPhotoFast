<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/screen_horizontal_margin"
        android:paddingEnd="@dimen/screen_horizontal_margin"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        tools:context=".ui.MainActivity">

        <!-- Переключатель автоматического сжатия -->
        <TextView
            android:id="@+id/tvAutoCompressionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auto_compression_title"
            android:textSize="16sp"
            android:textColor="@color/primary_text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Переключатель автоматического сжатия -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchAutoCompression"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/auto_compression_toggle"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvAutoCompressionTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.CompressPhotoFast.Switch" />

        <!-- Описание автоматического сжатия -->
        <TextView
            android:id="@+id/tvAutoCompressionDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auto_compression_description"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/switchAutoCompression"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        
        <!-- Предупреждение о необходимости разрешить фоновый режим -->
        <TextView
            android:id="@+id/tvBackgroundModeWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/background_mode_warning"
            android:textSize="13sp"
            android:textColor="@color/warning_text"
            android:layout_marginTop="2dp"
            android:minHeight="80dp"
            android:padding="6dp"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:linksClickable="true"
            app:layout_constraintTop_toBottomOf="@id/tvAutoCompressionDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        
        <!-- Переключатель режима сохранения -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchSaveMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/save_mode_toggle"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvBackgroundModeWarning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.CompressPhotoFast.Switch" />

        <!-- Описание режима сохранения -->
        <TextView
            android:id="@+id/tvSaveModeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_mode_description"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/switchSaveMode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        
        <!-- Разделитель для секции качества -->
        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvSaveModeDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        
        <!-- Заголовок для уровня сжатия -->
        <TextView
            android:id="@+id/tvCompressionQualityTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/compression_quality_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/divider2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        
        <!-- Описание уровня сжатия -->
        <TextView
            android:id="@+id/tvCompressionQualityDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/compression_quality_description"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvCompressionQualityTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        
        <!-- Контейнер для кнопок выбора уровня качества -->
        <RadioGroup
            android:id="@+id/radioGroupQuality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvCompressionQualityDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rbQualityLow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:paddingStart="4dp"
                android:text="@string/compression_quality_low" />
            
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rbQualityMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:paddingStart="4dp"
                android:text="@string/compression_quality_medium" />
            
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rbQualityHigh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:paddingStart="4dp"
                android:text="@string/compression_quality_high" />
        </RadioGroup>

        <!-- Индикатор загрузки -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/LargeProgressBar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:visibility="gone"
            android:indeterminate="true"
            android:elevation="4dp"
            android:background="@drawable/progress_background"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvAutoCompressionTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Статус операции -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/radioGroupQuality"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView> 