<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Темная тема приложения для AMOLED экранов -->
    <style name="Theme.CompressPhotoFast" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Цвета -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorSurface">@color/surface</item>
        
        <!-- Статус бар - pure black для AMOLED -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Фон - pure black для AMOLED -->
        <item name="android:windowBackground">@color/background</item>
        
        <!-- Типографика для темной темы -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        
        <!-- Специфичные настройки для темной темы -->
        <item name="elevationOverlayEnabled">true</item>
    </style>
    
    <!-- Стиль для кнопок в темной теме -->
    <style name="Widget.CompressPhotoFast.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/primary</item>
    </style>
    
    <!-- Стиль для переключателей в темной теме -->
    <style name="Widget.CompressPhotoFast.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    
    <!-- Стиль для диалогов в темной теме -->
    <style name="Theme.CompressPhotoFast.AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/dialog_positive_button</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:background">@color/surface</item>
    </style>
    
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_positive_button</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_negative_button</item>
    </style>
</resources> 