<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Основная тема приложения -->
    <style name="Theme.CompressPhotoFast" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Цвета -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- Статус бар -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        
        <!-- Фон -->
        <item name="android:windowBackground">@color/background</item>
        
        <!-- Типографика -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>
    
    <!-- Стиль для кнопок -->
    <style name="Widget.CompressPhotoFast.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- Стиль для переключателей -->
    <style name="Widget.CompressPhotoFast.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
</resources> 